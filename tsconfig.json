{
  "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" },
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2017",
    "module": "esnext",
    "paths": {
      "~*": ["./*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "./dist"]
}